######################################################################################################
# Description:
#   This script is downloading a Windows and Fedora to build virtual machines
######################################################################################################

cd /var/virtualization/iso-choosable/

# get fedora 21 x64
wget http://download.fedoraproject.org/pub/fedora/linux/releases/21/Workstation/x86_64/iso/Fedora-Live-Workstation-x86_64-21-5.iso

# get Windows 7 professional x64
wget http://msft.digitalrivercontent.net/win/X17-58868.iso

mv X17-58868.iso Windows_7_64-bit_Professional_English_X17-58868.iso

chmod 664 *
chown root:vm-storage *
